{

		"uberspark.manifest.namespace" : "uberspark/uobjcoll",
		"uberspark.manifest.version_min" : "6.0.0",
		"uberspark.manifest.version_max" : "any",


		"uberspark.uobjcoll.namespace" : "uberspark/uobjcoll/platform/rpi3/uxmhf",
		"uberspark.uobjcoll.platform" : "rpi3",
		"uberspark.uobjcoll.arch" : "armv8_32",
		"uberspark.uobjcoll.cpu" : "generic",
		"uberspark.uobjcoll.hpl" : "hyp",
		"uberspark.uobjcoll.sentinels_intra_uobjcoll" : [ "generic/generic/hyp/call" ],


		"uberspark.uobjcoll.configdefs" : [

			/* TBD: bring in automatically; for now it is the address of ORIGIN plus
				length of init method vccore srot section within uobjcoll.lscript */
			{ "name": "uxmhf_core_start_addr", "value": "0x01000000"},
			/* TBD: bring in automatically; for now it is the length of all sections
				within uobjcoll.lscript except for the init method vccore srot section */
			{ "name": "uxmhf_core_size", "value": "( 0x00200000 + 0x00200000 + 0x00800000 + 0x00400000)"},
			{ "name": "uxmhf_core_end_addr", "value": "( __UBERSPARK_UOBJCOLL_CONFIGDEF_UXMHF_CORE_START_ADDR__ + __UBERSPARK_UOBJCOLL_CONFIGDEF_UXMHF_CORE_SIZE__)"},
			{ "name": "uxmhf_boot_partition_start", "value": "8192"},
			{ "name": "uxmhf_boot_partition_end", "value": "137215"},

			{ "name": "secboot", "value": "@@FALSE@@"},
			{ "name": "dmaprot", "value": "@@FALSE@@"},
			{ "name": "intprot", "value": "@@FALSE@@"},
			{ "name": "fiqreflection", "value": "@@FALSE@@"},
			
			{ "name": "debug_uart", "value": "@@TRUE@@"},
			{ "name": "enable_uart_mini", "value": "@@TRUE@@"},
			{ "name": "enable_uart_pl011", "value": "@@FALSE@@"},
			{ "name": "enable_uart_pl011_ctsrts", "value": "@@FALSE@@"},

			{ "name": "enable_uapp_ctxtrace", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_pa5encfs", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_pvdrive_uart", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_uagent", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_uhcalltest", "value": "@@TRUE@@"},
			{ "name": "enable_uapp_khcalltest", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_uhsign", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_uhstatedb", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_utpmtest", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_watchdog", "value": "@@FALSE@@"},
			{ "name": "enable_uapp_picar_s", "value": "@@TRUE@@"},
			{ "name": "enable_uapp_i2c_driver", "value": "@@TRUE@@"}, 
			{ "name": "enable_uapp_i2c_ioaccess", "value": "@@TRUE@@"} 
		],
	
	
		/* uobjs */
		"uberspark.uobjcoll.uobjs" : {
			"master" : "",
			"templars" : [
				"uberspark/uobjcoll/platform/rpi3/uxmhf/uobjs/main"
			]
		},

		/* uobjcoll init method */
		"uberspark.uobjcoll.init_method" : {
			"uobj_namespace" : "uberspark/uobjcoll/platform/rpi3/uxmhf/uobjs/main",
			"public_method" : "entry",
			"sentinels" : [
				{
					"sentinel_type" : "baremetal/vccore/srot/generic/rpi3/hyp/call",
					"sentinel_size" : "0xff9000"	
				}	
			]
		},	


		/* uobjcoll public methods */
		"uberspark.uobjcoll.public_methods" : {
			"uberspark/uobjcoll/platform/rpi3/uxmhf/uobjs/main" : {
				"entry" : [ "generic/generic/hyp/call" ]
			}
		}

	
}
